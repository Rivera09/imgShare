<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image">Upload an image</i>
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" id="inputGroup" class="custom-file-input"
                            aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroup" class="custom-file-label">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input name="titel" type="text" class="form-control" placeholder="Title for the image" required>
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="Descripcion for image"
                    required></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-upload">
                    </i> Upload image
                </button>
            </div>
        </form>
    </div>
</div>